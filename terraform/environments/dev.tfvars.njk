# ──────────────────────────────────────────────────────────────────────────────
# Terraform Variables — Dev Environment
# Generated by Three Horizons Golden Path Template
# ──────────────────────────────────────────────────────────────────────────────

# General
environment         = "${{ values.environment }}"
location            = "${{ values.azure_region }}"
resource_group_name = "${{ values.name }}-rg"
project_name        = "${{ values.name }}"
frontend_location   = "${{ values.azure_region }}"

# PostgreSQL — Dev sizing (B_Standard_B1ms)
postgres_sku_name       = "B_Standard_B1ms"
postgres_storage_mb     = 32768
postgres_version        = "16"
postgres_admin_username = "psqladmin"

# Redis — Dev sizing (Basic C0)
redis_sku_name = "Basic"
redis_family   = "C"
redis_capacity = 0

# App Service — Dev sizing (B1)
app_service_sku_name = "B1"

# Container Image
docker_registry_url = "ghcr.io"
docker_image_name   = "${{ values.orgName }}/${{ values.repoName }}"
docker_image_tag    = "latest"

# Monitoring
log_analytics_retention_days = 30

# Alerts
alert_email = "devops@${{ values.orgName }}.com"

# Tags
tags = {
  environment = "${{ values.environment }}"
  project     = "${{ values.name }}"
  owner       = "${{ values.owner }}"
  managed-by  = "terraform"
  golden-path = "todo-app"
  system      = "${{ values.system }}"
}
